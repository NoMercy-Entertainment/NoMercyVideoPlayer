{
  "name": "@nomercy-entertainment/nomercy-video-player",
  "version": "0.1.0",
  "description": "Full event-driven video player without a UI.",
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "docs",
    "dist",
    "src",
    "./*"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean-dist && tsc && vite build && npm run clean-docs && npm run copy-docs",
    "serve": "vite preview",
    "test": "jest",
    "lint": "eslint ./src --ext .js,.ts,.d.ts --fix",
    "clean-dist": "shx rm -rf dist",
    "clean-docs": "shx mv docs/CNAME CNAME.tmp && shx rm -rf docs/* && shx mkdir -p docs && shx mv CNAME.tmp docs/CNAME",
    "copy-docs": "shx cp -r dist/* docs/"
  },
  "author": "NoMercy Entertainment",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoMercy-Entertainment/NoMercyVideoPlayer.git"
  },
  "license": "Apache-2.0",
  "keywords": [
    "video",
    "player",
    "NoMercy"
  ],
  "devDependencies": {
    "@nomercy-entertainment/media-session": "^0.1.11",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.14.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "autoprefixer": "^10.4.14",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tailwindcss": "^3.8.3",
    "jest": "^29.7.0",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^9.2.0",
    "prettier": "^3.3.3",
    "sass": "^1.65.1",
    "sass-loader": "^13.3.2",
    "shx": "^0.3.4",
    "tailwindcss": "^3.2.7",
    "tailwindcss-children": "^2.1.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "5.4.6",
    "vite-plugin-dts": "^3.6.0",
    "webpack": "5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@sabre-js/sabre": "^0.5.1-pre.21da9b6",
    "@types/webvtt-parser": "^2.2.0",
    "hls.js": "^1.5.13",
    "opentype.js": "^1.3.4",
    "tailwind-merge": "^2.6.0",
    "webvtt-parser": "^2.2.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
